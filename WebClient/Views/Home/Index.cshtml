                <h2>@Model.Services.Title</h2>
                <p class="lead">@Model.Services.Thumbnails</p>
            </div>
            <div class="row">
                @foreach (var service in Model.Services.Thumbnails)
                {
                    @Html.Partial("Service", service)
                }
            </div>
        </div>
    </section>
}

