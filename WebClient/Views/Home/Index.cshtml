@model WebClient.Models.Home.HomeVM

@if (Model.Features != null)
{
    <section id="feature">
        <div class="container">
            <div class="center wow fadeInDown animated" style="visibility: visible; animation-name: fadeInDown;">
                <h2>@Model.Features.Title</h2>
                <p class="lead">
                    @Model.Features.Description
                </p>
            </div>
            <div class="row">
                <div class="features">
                    @foreach (var feature in Model.Features.Thumbnails)
                    {
                        @Html.Partial("Feature", feature)

                    }
                </div>
            </div>
        </div>
    </section>

}

@if (Model.Galleries != null)
{
    <section id="recent-works">
        <div class="container">
            <div class="center wow fadeInDown animated" style="visibility: visible; animation-name: fadeInDown;">
                <h2>@Model.Galleries.Title</h2>
                <p class="lead">@Model.Galleries.Description</p>
            </div>
            <div class="row">
                @foreach (var gallery in Model.Galleries.Thumbnails)
                {
                    @Html.Partial("Gallery", gallery)
                }
            </div>
        </div>
    </section>
}

@if (Model.Services != null)
{
    <section id="services" class="service-item">
        <div class="container">
